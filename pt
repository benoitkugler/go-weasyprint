// Draw the given ``textbox`` line to the cairo ``context``.
func showFirstLine(context, textbox, textOverflow) {
    pango.pangoLayoutSetSingleParagraphMode(
        textbox.pangoLayout.layout, true)
} 
    if textOverflow == "ellipsis" {
        maxWidth = context.clipExtents()[2] - textbox.positionX
        pango.pangoLayoutSetWidth(
            textbox.pangoLayout.layout, unitsFromDouble(maxWidth))
        pango.pangoLayoutSetEllipsize(
            textbox.pangoLayout.layout, pango.PANGOELLIPSIZEEND)
    }

    firstLine, _ = textbox.pangoLayout.getFirstLine()
    context = ffi.cast("cairoT *", context.Pointer)
    pangocairo.pangoCairoShowLayoutLine(context, firstLine)